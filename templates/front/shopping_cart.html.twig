{% extends 'base.html.twig' %}
{% trans_default_domain 'cart' %}

{% block body %}
    <div class="px-4 px-lg-0">
        <!-- For demo purpose -->
        <div class="container text-white py-5 text-center">
            <h1 class="display-4">
                {{ 'title'|trans }}
            </h1>
            <p class="lead mb-0">{{ 'sub_title'|trans }}</p>
            <p class="lead">Snippet by <a href="https://bootstrapious.com/snippets" class="text-white font-italic">
                    <u>Bootstrapious</u></a>
            </p>
        </div>
        <!-- End -->

        <div class="pb-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

                        <!-- Shopping cart table -->
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="p-2 px-3 text-uppercase">
                                            {{ 'table.headers.product'|trans }}
                                        </div>
                                    </th>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">
                                            {{ 'table.headers.price'|trans }}
                                        </div>
                                    </th>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">
                                            {{ 'table.headers.quantity'|trans }}
                                        </div>
                                    </th>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">
                                            {{ 'table.headers.remove'|trans }}
                                        </div>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for item in testOrder.items %}
                                    <tr>
                                        <th scope="row" class="border-0">
                                            <div class="p-2">
                                                <img src="https://picsum.photos/70/70"
                                                     alt="" width="70" class="img-fluid rounded shadow-sm">
                                                <div class="ml-3 d-inline-block align-middle">
                                                    <h5 class="mb-0">
                                                        <a href="#" class="text-dark d-inline-block align-middle">
                                                            {{ item.product.title }}
                                                        </a>
                                                    </h5>
                                                    <span class="text-muted font-weight-normal font-italic d-block">
                                                    {{ item.product.brand.name }}
                                                </span>
                                                </div>
                                            </div>
                                        </th>
                                        <td class="border-0 align-middle">
                                            <strong>
                                                {{ item.product.price|number_format(2, '.', ' ') }}â‚¬
                                            </strong>
                                        </td>
                                        <td class="border-0 align-middle"><strong>3</strong></td>
                                        <td class="border-0 align-middle"><a href="#" class="text-dark"><i
                                                        class="fa fa-trash"></i></a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- End -->
                    </div>
                </div>

                <div class="row py-5 p-4 bg-white rounded shadow-sm">
                    <div class="col-lg-6">
                        <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">
                            {{ 'coupon.title'|trans }}
                        </div>
                        <div class="p-4">
                            <p class="font-italic mb-4">
                                {{ 'coupon.help'|trans }}
                            </p>
                            <div class="input-group mb-4 border rounded-pill p-2">
                                <input type="text" placeholder="{{ 'coupon.apply'|trans }}" aria-describedby="button-addon3" readonly
                                       class="form-control border-0">
                                <div class="input-group-append border-0">
                                    <button id="button-addon3" type="button" class="btn btn-dark px-4 rounded-pill"><i
                                                class="fa fa-gift mr-2"></i>
                                        {{ 'coupon.apply'|trans }}
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">
                            {{ 'instructions_seller.title'|trans }}
                        </div>
                        <div class="p-4">
                            <p class="font-italic mb-4">
                                {{ 'instructions_seller.help'|trans }}
                            </p>
                            <textarea name="" cols="30" rows="2" class="form-control" readonly></textarea>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">
                            {{ 'order_summary.title'|trans }}
                        </div>
                        <div class="p-4">
                            <p class="font-italic mb-4">S
                                {{ 'order_summary.help'|trans }}</p>
                            <ul class="list-unstyled mb-4">
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong
                                            class="text-muted">
                                        {{ 'order_summary.subtotal'|trans }}
                                    </strong><strong>$390.00</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong
                                            class="text-muted">
                                        {{ 'order_summary.shipping'|trans }}
                                    </strong><strong>$10.00</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong
                                            class="text-muted">
                                        {{ 'order_summary.vat'|trans }}
                                    </strong><strong>$0.00</strong></li>
                                <li class="d-flex justify-content-between py-3 border-bottom"><strong
                                            class="text-muted">
                                        {{ 'order_summary.total'|trans }}
                                    </strong>
                                    <h5 class="font-weight-bold">$400.00</h5>
                                </li>
                            </ul>
                            <a href="#" class="btn btn-dark rounded-pill py-2 btn-block">
                                {{ 'order_summary.checkout'|trans }}
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}